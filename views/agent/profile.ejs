<main>
	<%- include('../partials/agentSidebar') %>
	
	<div id="main-wrapper">
		
		<div class="bg-white shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Perfil</h5>
		</div>
		
		<form action="/agent/profile?_method=PUT" method="POST" class="w-75 border ms-3 my-3 p-4 bg-white rounded-2 shadow" style="min-width: 400px;">
			
			<div class="row">
				<div class="col-sm-6 mb-4">
					<label for="first-name" class="form-label">Nombre</label>
					<input type="text" name="agent[firstName]" class="form-control" id="first-name" placeholder="Enter first name.." value="<%= currentUser.firstName %>" required>
				</div>
				
				<div class="col-sm-6 mb-4">
					<label for="last-name" class="form-label">Apellido</label>
					<input type="text" name="agent[lastName]" class="form-control" id="last-name" placeholder="Enter last name.." value="<%= currentUser.lastName %>" required>
				</div>
			</div>
			
			
			<div class="mb-4">
				<label for="email" class="form-label">E-mail</label>
				<input type="email" id="email" class="form-control" value="<%= currentUser.email %>" disabled>
			</div>
			
			<div class="mb-4">
				<span class="d-inline-block me-2">Genero:</span>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name="agent[gender]" id="male" value="male" <% if(currentUser.gender=='male'){%> checked <%}%> >
					<label class="form-check-label" for="male">Hombre</label>
				</div>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name="agent[gender]" id="female" value="female" <% if(currentUser.gender=='female'){%> checked <%}%> >
					<label class="form-check-label" for="female">Mujer</label>
				</div>
			</div>
			
			<div class="mb-4">
				<label for="address" class="form-label">Direccion</label>
				<input type="text" name="agent[address]" class="form-control" id="address" placeholder="Enter address.." value="<%= currentUser.address %>">
			</div>
			
			<div class="mb-4">
				<label for="phone" class="form-label">Telefono</label>
				<input type="number" name="agent[phone]" class="form-control" id="phone" placeholder="Enter phone.." value="<%= currentUser.phone %>">
			</div>
			
			<button type="submit" class="btn w-75 d-block m-auto mt-4">Actualizar</button>
		</form>
		
		
		
	</div>
</main>